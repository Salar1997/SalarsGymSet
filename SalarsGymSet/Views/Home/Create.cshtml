@model SalarsGymSet.Models.Gymset

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["textmsg"] != null)
{
    @Html.Raw(TempData["textmsg"])
}


<h1>Create an new Exercise</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User" class="control-label text-light" hidden></label>
                <input asp-for="User" class="form-control" value="@User.Identity.Name" required hidden />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise" class="control-label text-light"></label>
                <input asp-for="Exercise" class="form-control" required />
                <span asp-validation-for="Exercise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Set" class="control-label text-light"></label>
                <input asp-for="Set" class="form-control" required />
                <span asp-validation-for="Set" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" type="date" class="form-control" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <p class="text-light">Difficulty:</p>
                <input type="radio" name="difficulty" value="Hard" required style="margin-right:5px; margin-left:5px; color: white" />Hard
                <input type="radio" name="difficulty" value="Medium" style="margin-right:5px; margin-left:5px; color: white" />Medium
                <input type="radio" name="difficulty" value="Easy" style="margin-right:5px; margin-left:5px; color: white" />Easy
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Create" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <form action="/Home">
        <input type="submit" value="Back to Home" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}