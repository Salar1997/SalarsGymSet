@model SalarsGymSet.Models.Gymset

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Done With @Model.Exercise</h1>

<h3>Are you sure you are DONE with @Model.Exercise?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercise)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exercise)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Set)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Set)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Difficulty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Done" class="btn btn-danger" /> |
        <input type="submit" value="Back to Home" class="btn btn-primary" />
    </form>
</div>